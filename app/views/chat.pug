extends layout

block append css
  link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")

block content
  body.chat
    .chat__sidebar
      h3 Active Users
      #users 
      //button#test Holla
    .chat__main
      canvas( id="draw", resize="true", keepalive="true" )
      //ol#messages.chat__messages
      //.chat__footer
        form#message-form
          input(type="text" id="message" name="message", placeholder="Message" autofocus autocomplete="off")
          button(type="submit") Submit
        button#send-location Send location

    //script#message-template(type="text/template")
      li.message
        .message__title
          h4 {{ from }}
          span {{ createdAt }} 
        .message__body
          p {{ text }} 
    
    //script#location-message-template(type="text/template")
      li.message
        .message__title
          h4 {{ from }}
          span {{ createdAt }}
        .message__body
          p
            a( href="{{ text }}", target="_blank") My Current Location

